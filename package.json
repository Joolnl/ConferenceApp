{
  "name": "conference-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "cypress open",
    "scully": "scully",
    "scully:serve": "scully serve",
    "server": "http-server dist/static",
    "cy:run": "cypress run",
    "ci:test": "start-server-and-test server http://localhost:8080 cy:run",
    "index": "m2j -c -o ./scripts/posts.json ./markdown/posts/*.md && m2j -c -o ./scripts/conferences.json ./markdown/conferences/*.md",
    "optimize-json": "node fix-json ./scripts/posts.json && node fix-json ./scripts/conferences.json",
    "save-index": "node ./scripts/index.js",
    "test-content": "npm run index && node ./scripts/content-test.js",
    "index:optimize": "npm run index && npm run optimize-json",
    "count-tags": "node ./scripts/count-tags.js",
    "build": "npm run index && node ./scripts/count-tags.js && npx ng build && start-server-and-test scully:serve http://localhost:1864 scully"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.0.0-rc.8",
    "@angular/common": "~9.0.0-rc.8",
    "@angular/compiler": "~9.0.0-rc.8",
    "@angular/core": "~9.0.0-rc.8",
    "@angular/forms": "~9.0.0-rc.8",
    "@angular/platform-browser": "~9.0.0-rc.8",
    "@angular/platform-browser-dynamic": "~9.0.0-rc.8",
    "@angular/router": "~9.0.0-rc.8",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "@scullyio/init": "0.0.17",
    "@scullyio/ng-lib": "0.0.13",
    "@scullyio/scully": "0.0.60",
    "algoliasearch": "^3.35.1",
    "bootstrap": "^4.4.1",
    "font-awesome": "^4.7.0",
    "rxjs": "~6.5.3",
    "tslib": "^1.10.0",
    "url-slug": "^2.2.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.900.0-rc.8",
    "@angular/cli": "~9.0.0-rc.8",
    "@angular/compiler-cli": "~9.0.0-rc.8",
    "@angular/language-service": "~9.0.0-rc.8",
    "@types/algoliasearch": "^3.34.8",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "cypress": "^3.8.2",
    "firebase-tools": "^7.12.1",
    "http-server": "^0.12.1",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "protractor": "~5.4.2",
    "start-server-and-test": "^1.10.7",
    "ts-node": "~8.3.0",
    "tslint": "~5.18.0",
    "typescript": "~3.6.4",
    "lodash.values": "^4.3.0",
    "markdown-to-json": "^0.5.4",
    "showdown": "^1.9.1"
  }
}
