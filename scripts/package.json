{
  "name": "scripts",
  "version": "1.0.0",
  "description": "scripts",
  "scripts": {
    "index": "m2j -c -o ./posts.json ../markdown/posts/*.md && m2j -c -o ./conferences.json ../markdown/conferences/*.md",
    "optimize-json": "node fix-json ./posts.json && node fix-json ./conferences.json",
    "save-index": "node index.js",
    "index:optimize": "npm run index && npm run optimize-json"
  },
  "author": "Bas van der Lee",
  "dependencies": {
    "algoliasearch": "^3.35.1",
    "lodash.values": "^4.3.0",
    "markdown-to-json": "^0.5.4",
    "showdown": "^1.9.1"
  }
}
